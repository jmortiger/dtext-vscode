{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "DText (e621)",
	"patterns": [
		{ "include": "#meta" },
		{ "include": "#entity" },
		{ "include": "#keywords" },
		{ "include": "#strings" },
		{ "include": "#numbers" },
		{ "include": "#variables" },
		{ "include": "#types" }
	],
	"repository": {
		"entity": {
			"patterns": [
				{
					"name": "entity.name.tag",
					"begin": "(\\[)(?=[^\\]]*\\])",
					"beginCaptures": { "1": { "name": "punctuation.definition.tag.begin.dtext" } },
					"end": "(\\])",
					"endCaptures": { "1": { "name": "punctuation.definition.tag.end.dtext" } },
					"comment": "A comment block starting & ending with a line with optional leading whitespace & bookended by hyphens. comment.block.header.start/end"
				}
			]
		},
		"meta": {
			"patterns": [
				{ "include": "#entity" },
				{
					"name": "meta.tag.structure.section",
					"match": "(\\[section[^\\]]*\\]((?>[^\\[]*(?>(?=\\[/section[^\\]]*\\])|\\[+))*\\[/section[^\\]]*\\]))",
					"comment": ""
				},
				{
					"name": "meta.tag.other.unrecognized",
					"match": "(\\[[^\\]]*\\]((?:[^\\[]*(?:(?=\\[/[^\\]]*\\])|\\[+))*\\[/[^\\]]*\\]))",
					"comment": "A comment block starting & ending with a line with optional leading whitespace & bookended by hyphens. comment.block.header.start/end"
				}
			]
		}
	},
	"scopeName": "source.dtext"
}