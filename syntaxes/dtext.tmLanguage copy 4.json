{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "DText (e621)",
	"patterns": [
		{ "include": "#meta" }
	],
	"repository": {
		"entity-section-start": {
			"name": "entity.name.tag.start",
			"begin": "(\\[)section(?=[^\\]]*\\])",
			"beginCaptures": { "1": { "name": "punctuation.definition.tag.begin.dtext" } },
			"end": "(\\])",
			"endCaptures": { "1": { "name": "punctuation.definition.tag.end.dtext" } },
			"comment": ""
		},
		"entity-section-end": {
			"name": "entity.name.tag.end",
			"begin": "(\\[/)section(?=[^\\]]*\\])",
			"beginCaptures": { "1": { "name": "punctuation.definition.tag.begin.dtext" } },
			"end": "(\\])",
			"endCaptures": { "1": { "name": "punctuation.definition.tag.end.dtext" } },
			"comment": ""
		},
		"entity-bold-start": {
			"name": "entity.name.tag.start",
			"begin": "(\\[)b(?=[^\\]]*\\])",
			"beginCaptures": { "1": { "name": "punctuation.definition.tag.begin.dtext" } },
			"end": "(\\])",
			"endCaptures": { "1": { "name": "punctuation.definition.tag.end.dtext" } },
			"comment": ""
		},
		"entity-bold-end": {
			"name": "entity.name.tag.end",
			"begin": "(\\[/)b(?=[^\\]]*\\])",
			"beginCaptures": { "1": { "name": "punctuation.definition.tag.begin.dtext" } },
			"end": "(\\])",
			"endCaptures": { "1": { "name": "punctuation.definition.tag.end.dtext" } },
			"comment": ""
		},
		"meta": {
			"patterns": [
				{ "include": "#meta-section" },
				{ "include": "#meta-bold" },
				{ "include": "#meta-tag" },
				{ "include": "#entity" }
			]
		},
		"entity": {
			"patterns": [
				{
					"name": "entity.name.tag.start",
					"begin": "(\\[)(?=[^\\]]*\\])",
					"beginCaptures": { "1": { "name": "punctuation.definition.tag.begin.dtext" } },
					"end": "(\\])",
					"endCaptures": { "1": { "name": "punctuation.definition.tag.end.dtext" } },
					"comment": "A comment block starting & ending with a line with optional leading whitespace & bookended by hyphens. comment.block.header.start/end"
				},
				{
					"name": "entity.name.tag.end",
					"begin": "(\\[/)(?=[^\\]]*\\])",
					"beginCaptures": { "1": { "name": "punctuation.definition.tag.begin.dtext" } },
					"end": "(\\])",
					"endCaptures": { "1": { "name": "punctuation.definition.tag.end.dtext" } },
					"comment": "A comment block starting & ending with a line with optional leading whitespace & bookended by hyphens. comment.block.header.start/end"
				}
			]
		},
		"meta-section": {
			"name": "meta.section",
			"contentName": "meta.section.body",
			"begin": "(?m)(?=\\[section[^\\]]*\\])",
			"end": "(?m)(?<=\\[/section[^\\]]*\\])",
			"patterns": [
				{ "include": "#entity-section-start" },
				{ "include": "#entity-section-end" },
				{ "include": "#meta" },
				{ "include": "#entity" }
			]
		},
		"meta-bold": {
			"name": "meta.bold",
			"contentName": "meta.bold.body",
			"begin": "(?m)(?=\\[b[^\\]]*\\])",
			"end": "(?m)(?<=\\[/b[^\\]]*\\])",
			"patterns": [
				{ "include": "#entity-bold-start" },
				{ "include": "#entity-bold-end" },
				{ "include": "#meta" },
				{ "include": "#entity" }
			]
		}
	},
	"scopeName": "source.dtext"
}